<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_terms_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.sajmep</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="200"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='analytic']" position="after">
                    <h2>Terms and Conditions</h2>
                    <div class="col-12 col-lg-6 o_setting_box" >
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="mt16">
                                    <div>Terms and Conditions</div>
                                    <div>
                                        <field name="invoice_terms_and_conditions"  class="oe_account_terms mt-5 w-100" placeholder="Insert your terms &amp; conditions here..."/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="mt16">
                                     <div>Arabic Terms and Conditions</div>
                                    <div>
                                        <field name="arabic_invoice_terms_and_conditions"  class="oe_account_terms mt-5 w-100" placeholder="Insert your terms &amp; conditions here..."/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>



                </xpath>

            </field>
        </record>
    </data>
</odoo>